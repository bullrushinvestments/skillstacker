import type { BuildCommand, EnvironmentVariables, HeaderRule } from './types'; // Assume custom types are defined in a separate file

interface CacheControlPolicy {
  path: string;
  headers: Array<{ key: string; value: string }>;
}

interface DeployConfig {
  build?: BuildCommand;
  env?: EnvironmentVariables;
  redirects?: Array<{
    source: string;
    destination: string;
    statusCode: number;
  }>;
  headers?: Array<HeaderRule>;
  cacheControlPolicies?: CacheControlPolicy[];
  frameworkSettings?: {
    vercel?: Record<string, any>;
    netlify?: Record<string, any>;
  };
}

interface BuildCommand {
  command: string;
  output: string;
}

type EnvironmentVariables = Record<string, string>;

interface HeaderRule {
  source: string;
  headers: Array<{ key: string; value: string }>;
}

export const deployConfig: DeployConfig = {
  build: {
    command: 'next build',
    output: '.next'
  },
  env: {
    NEXT_PUBLIC_API_URL: process.env.NEXT_PUBLIC_API_URL,
    NEXT_PRIVATE_SECRET_KEY: process.env.NEXT_PRIVATE_SECRET_KEY
  },
  redirects: [
    { source: '/old-url', destination: '/new-url', statusCode: 301 }
  ],
  headers: [
    {
      source: '/',
      headers: [
        { key: 'Strict-Transport-Security', value: 'max-age=63072000; includeSubDomains; preload' },
        { key: 'X-Frame-Options', value: 'DENY' }
      ]
    }
  ],
  cacheControlPolicies: [
    {
      path: '/api/*',
      headers: [
        { key: 'Cache-Control', value: 's-maxage=1, stale-while-revalidate=5' }
      ]
    },
    {
      path: '/*.svg',
      headers: [
        { key: 'Cache-Control', value: 'public, max-age=31536000' }
      ]
    }
  ],
  frameworkSettings: {
    vercel: {
      buildCommand: 'next build',
      startCommand: 'next start'
    },
    netlify: {
      functions: './functions',
      redirects: '_redirects'
    }
  }
};

